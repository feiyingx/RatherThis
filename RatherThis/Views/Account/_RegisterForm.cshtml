@model RatherThis.Models.RegisterModel
@{
    Layout = null;
}

@using (Ajax.BeginForm("Register", "Account", new AjaxOptions{
            UpdateTargetId = "registration",
            InsertionMode = InsertionMode.Replace,
            LoadingElementId = "registration-ajax-loading"
        })) 
    {
    @Html.ValidationSummary()
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-field">
                <label for="gender-female"><input id="gender-female" type="radio" name="Gender" value="F" />Female</label>
                <label for="gender-male"><input id="gender-male" type="radio" name="Gender" value="M" />Male</label>
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.ConfirmPassword)
            </div>

            <p>
                <input type="submit" value="Register" />
            </p>
        </fieldset>
    </div>
}

