@model RatherThis.Models.ForgotPasswordViewModel
           
@{
    ViewBag.Title = "Forgot Password | RatherThis";
}
<div class="misc">
    <h2>FORGOT PASSWORD</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <div>
            <fieldset>
                <div class="editor-field">
                    <label for="forgot-pw-email">Enter Your Email</label>
                    @Html.TextBoxFor(e => e.Email, new { id="forgot-pw-email" })
                </div>

                <input type="submit" value="SEND RESET PASSWORD REQUEST" />
            </fieldset>
        </div>
    }


</div>
